{
	"plugins": [ "joyent" ],
	"extends": [
		"eslint:recommended",
		"plugin:joyent/style",
		"plugin:joyent/lint"
	],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "script",
		"ecmaFeatures": {
		}
	},
	"env": {
		"node": true
	},
	"rules": {
		// Lint:
		"strict": [ "error", "global" ],

		// Style:
		"func-style": [ "error", "declaration" ],
		"multiline-comment-style": [ "error", "starred-block" ]
	}
}